# Find 'IMPORTANT' to change the important variable and 'change' to change variables are recommended to change.

# ------------------------------------------------------------------------------
# General Settings
# ------------------------------------------------------------------------------
# Configure the fundamental behavior of your Appwrite server.
_APP_MAIN_PORT_HTTP=8080
_APP_MAIN_PORT_HTTPS=8443
_APP_LOCALE=en
_APP_OPTIONS_ABUSE=enabled

# Set your server running environment.
# By default, the var is set to 'development'.
# When deploying to production, change it to: 'production'.
_APP_ENV=production

# Force HTTPS for different components of the server.
_APP_OPTIONS_ROUTER_FORCE_HTTPS=disabled
_APP_OPTIONS_ROUTER_PROTECTION=disabled

# !!! IMPORTANT: Keep this secret safe! !!!
# This is the secret key used for encryption. Do not loose or change it after installation.
_APP_OPENSSL_KEY_V1=your-secret-key

# !!! IMPORTANT: Your domain name !!!
# The domain name of your Appwrite server.
_APP_DOMAIN=localhost

_APP_CUSTOM_DOMAIN_DENY_LIST=example.com,test.com,app.example.com
_APP_DOMAIN_FUNCTIONS=functions.localhost
_APP_DOMAIN_SITES=sites.localhost
_APP_DOMAIN_TARGET_CNAME=localhost
_APP_DOMAIN_TARGET_AAAA=::1
_APP_DOMAIN_TARGET_A=127.0.0.1
_APP_DOMAIN_TARGET_CAA=
_APP_DNS=8.8.8.8
_APP_CONSOLE_WHITELIST_ROOT=enabled
_APP_CONSOLE_WHITELIST_EMAILS=
_APP_CONSOLE_WHITELIST_IPS=
_APP_CONSOLE_HOSTNAMES=
_APP_CONSOLE_SESSION_ALERTS=disabled
_APP_SYSTEM_SESSION_EXPIRE=315360000
_APP_COMPRESSION_ENABLED=enabled
_APP_COMPRESSION_MIN_SIZE_BYTES=1024

# ------------------------------------------------------------------------------
# System Emails
# ------------------------------------------------------------------------------
# Customize the sender details for emails sent by the Appwrite system (e.g., verification, invites).
_APP_SYSTEM_EMAIL_NAME=Appwrite
_APP_SYSTEM_TEAM_EMAIL=team@appwrite.io
_APP_SYSTEM_RESPONSE_FORMAT=
_APP_SYSTEM_SECURITY_EMAIL_ADDRESS=certs@appwrite.io
_APP_EMAIL_SECURITY=
_APP_EMAIL_CERTIFICATES=

# Configured sender email address, seen by recipients.
_APP_SYSTEM_EMAIL_ADDRESS=noreply@appwrite.io

# ------------------------------------------------------------------------------
# Usage & Logging
# ------------------------------------------------------------------------------
# Configure how usage stats are aggregated and where logs are sent.
_APP_USAGE_STATS=enabled
_APP_LOGGING_CONFIG=
_APP_USAGE_AGGREGATION_INTERVAL=30
_APP_WORKER_PER_CORE=6

# ------------------------------------------------------------------------------
# Redis Config
# ------------------------------------------------------------------------------
# Appwrite uses Redis for caching, messaging, and task queues.
# Use these variables to connect to your Redis instance.
_APP_REDIS_HOST=redis
_APP_REDIS_PORT=6379
_APP_REDIS_USER=
_APP_REDIS_PASS=

# ------------------------------------------------------------------------------
# Database Config (MariaDB)
# ------------------------------------------------------------------------------
# Appwrite uses MariaDB to store all your project data and metadata.
# Use these variables to connect to your MariaDB instance.
_APP_DB_HOST=mariadb
_APP_DB_PORT=3306
_APP_DB_SCHEMA=appwrite

# !!! IMPORTANT !!!
_APP_DB_USER=user

# !!! IMPORTANT !!!
_APP_DB_PASS=password

# !!! IMPORTANT !!!
_APP_DB_ROOT_PASS=rootsecretpassword

# ------------------------------------------------------------------------------
# InfluxDB & StatsD
# ------------------------------------------------------------------------------
# Use these services for collecting and visualizing usage statistics.
_APP_INFLUXDB_HOST=influxdb
_APP_INFLUXDB_PORT=8086
_APP_STATSD_HOST=telegraf
_APP_STATSD_PORT=8125

# ------------------------------------------------------------------------------
# SMTP Configuration
# ------------------------------------------------------------------------------
# !!! IMPORTANT: Configure an SMTP server to allow Appwrite to send emails !!!
# Production SMTP services (like SendGrid, Mailgun) are recommended for better deliverability.

# !!! IMPORTANT !!!
_APP_SMTP_HOST=

# !!! IMPORTANT !!!
_APP_SMTP_PORT=

# !!! IMPORTANT !!!
_APP_SMTP_SECURE=

# !!! IMPORTANT !!!
_APP_SMTP_USERNAME=

# !!! IMPORTANT !!!
_APP_SMTP_PASSWORD=

# ------------------------------------------------------------------------------
# Phone (SMS)
# ------------------------------------------------------------------------------
# Configure an SMS provider to allow Appwrite to send SMS messages (e.g., for phone authentication).
_APP_SMS_PROVIDER=
_APP_SMS_FROM=

# ------------------------------------------------------------------------------
# Storage Configuration
# ------------------------------------------------------------------------------
# Configure storage limits, antivirus scanning, and the storage backend (Local, S3, DigitalOcean Space, etc.).
# You can select which storage adapter to use by setting the _APP_STORAGE_DEVICE environment variable.
# Valid values are local, s3, dospaces, backblaze, linode, and wasabi.
# Each storage adapter requires its own set of additional environment variables to configure.
_APP_STORAGE_LIMIT=30000000
_APP_STORAGE_PREVIEW_LIMIT=20000000
_APP_STORAGE_ANTIVIRUS=disabled
_APP_STORAGE_ANTIVIRUS_HOST=clamav
_APP_STORAGE_ANTIVIRUS_PORT=3310
_APP_STORAGE_DEVICE=local
_APP_STORAGE_S3_ACCESS_KEY=
_APP_STORAGE_S3_SECRET=
_APP_STORAGE_S3_REGION=us-east-1
_APP_STORAGE_S3_BUCKET=
_APP_STORAGE_S3_ENDPOINT=
_APP_STORAGE_DO_SPACES_ACCESS_KEY=
_APP_STORAGE_DO_SPACES_SECRET=
_APP_STORAGE_DO_SPACES_REGION=us-east-1
_APP_STORAGE_DO_SPACES_BUCKET=
_APP_STORAGE_BACKBLAZE_ACCESS_KEY=
_APP_STORAGE_BACKBLAZE_SECRET=
_APP_STORAGE_BACKBLAZE_REGION=us-west-004
_APP_STORAGE_BACKBLAZE_BUCKET=
_APP_STORAGE_LINODE_ACCESS_KEY=
_APP_STORAGE_LINODE_SECRET=
_APP_STORAGE_LINODE_REGION=eu-central-1
_APP_STORAGE_LINODE_BUCKET=
_APP_STORAGE_WASABI_ACCESS_KEY=
_APP_STORAGE_WASABI_SECRET=
_APP_STORAGE_WASABI_REGION=eu-central-1
_APP_STORAGE_WASABI_BUCKET=

# ------------------------------------------------------------------------------
# Compute (Functions and Sites)
# ------------------------------------------------------------------------------
# Configure limits and behavior for Cloud Functions and Sites.
# This includes timeouts, resource limits, and runtime environments.
_APP_COMPUTE_SIZE_LIMIT=30000000
_APP_FUNCTIONS_BUILD_SIZE_LIMIT=2000000000
_APP_FUNCTIONS_TIMEOUT=900
_APP_COMPUTE_BUILD_TIMEOUT=900
_APP_COMPUTE_CPUS=0
_APP_COMPUTE_MEMORY=0

# !!! IMPORTANT !!!
_APP_EXECUTOR_SECRET=your-secret-key

_APP_EXECUTOR_HOST=http://exc1/v1
_APP_BROWSER_HOST=http://appwrite-browser:3000/v1
_APP_COMPUTE_INACTIVE_THRESHOLD=60

# ------------------------------------------------------------------------------
# Docker & Runtimes
# ------------------------------------------------------------------------------
# Credentials for pulling Open Runtimes images from Docker Hub.
_APP_COMPUTE_RUNTIMES_NETWORK=runtimes
_APP_DOCKER_HUB_USERNAME=
_APP_DOCKER_HUB_PASSWORD=

# ------------------------------------------------------------------------------
# Maintenance & Retention
# ------------------------------------------------------------------------------
# Configure maintenance intervals and data retention policies for logs and stats.
_APP_COMPUTE_MAINTENANCE_INTERVAL=3600
_APP_SITES_TIMEOUT=900

# A comma-separated list of runtimes to enable for Appwrite Functions.
# Only enabled runtimes will be selectable in the Appwrite Console.
# Note: Each enabled runtime pulls a separate Docker image (~100MB-400MB each).
# Keep this list minimal to save disk space.
# Example: node-22,php-8.3,python-3.12,ruby-3.3
_APP_FUNCTIONS_RUNTIMES=node-22

_APP_SITES_RUNTIMES=static-1,node-22,flutter-3.29
_APP_MAINTENANCE_INTERVAL=86400
_APP_MAINTENANCE_DELAY=0
_APP_MAINTENANCE_START_TIME=00:00
_APP_MAINTENANCE_RETENTION_CACHE=2592000
_APP_MAINTENANCE_RETENTION_EXECUTION=1209600
_APP_MAINTENANCE_RETENTION_AUDIT=1209600
_APP_MAINTENANCE_RETENTION_AUDIT_CONSOLE=15778800
_APP_MAINTENANCE_RETENTION_ABUSE=86400
_APP_MAINTENANCE_RETENTION_USAGE_HOURLY=8640000
_APP_MAINTENANCE_RETENTION_SCHEDULES=86400

# ------------------------------------------------------------------------------
# VCS (Version Control System)
# ------------------------------------------------------------------------------
# Configure integration with GitHub for automated deployments.
_APP_VCS_GITHUB_APP_NAME=
_APP_VCS_GITHUB_PRIVATE_KEY=
_APP_VCS_GITHUB_APP_ID=
_APP_VCS_GITHUB_CLIENT_ID=
_APP_VCS_GITHUB_CLIENT_SECRET=
_APP_VCS_GITHUB_WEBHOOK_SECRET=

# ------------------------------------------------------------------------------
# GraphQL
# ------------------------------------------------------------------------------
# Configure limits for the GraphQL API to ensure stability.
_APP_GRAPHQL_MAX_BATCH_SIZE=10
_APP_GRAPHQL_MAX_COMPLEXITY=250
_APP_GRAPHQL_MAX_DEPTH=3

# ------------------------------------------------------------------------------
# Migrations
# ------------------------------------------------------------------------------
# Credits for 3rd party services used for data migration (e.g., Firebase).
_APP_MIGRATIONS_FIREBASE_CLIENT_ID=
_APP_MIGRATIONS_FIREBASE_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# Assistant
# ------------------------------------------------------------------------------
# API keys for the Appwrite Assistant (powered by OpenAI).
_APP_ASSISTANT_OPENAI_API_KEY=
